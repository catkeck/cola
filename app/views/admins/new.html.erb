<div class="col-lg-12">
  <div class="well bs-component">
    <%= form_for @admin, url: admins_signup_path, class: "form-horizontal" do |f| %>
      <fieldset>
        <legend> New Admin </legend>
        <div class="form-group">
           <label for="admin_name" class="col-lg-2 control-label">Name:</label>
           <div class="col-lg-10">
            <%= f.text_field :name, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
           <label for="admin_username" class="col-lg-2 control-label">Username:</label>
           <div class="col-lg-10">
            <%= f.text_field :username, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
           <label for="admin_password" class="col-lg-2 control-label">Password:</label>
           <div class="col-lg-10">
            <%= f.password_field :password, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
           <label for="admin_password_confirmation" class="col-lg-2 control-label">Password Confirmation:</label>
           <div class="col-lg-10">
            <%= f.password_field :password_confirmation, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Create Admin Account", {class: "btn btn-primary"} %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>