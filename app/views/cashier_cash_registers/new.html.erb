<div class="col-lg-12">
  <div class="well bs-component">
    <%= form_for @cashier_cash_register, url: open_cash_register_path, class: "form-horizontal" do |f| %>
      <fieldset>
      <legend> Select Cash Register </legend>
      <div class="form-group">
        <div class="col-lg-10">
          <%= f.select :cash_register_id, @cash_registers.collect { |cash_register| [cash_register.register_number, cash_register.id]}, {}, {class: "form-control"}%></br>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Select Cash Register", {class: "btn btn-primary"} %>
        </div>
      </div>
      </fieldset>
    <% end %>
  </div>
</div>
