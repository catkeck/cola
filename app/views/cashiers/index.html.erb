<div class="col-lg-12">
  <div class="well bs-component">
    <!--lists the admin's cashiers -->
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Cashiers:</h3>
      </div>
      <div class="panel-body">
        <ul class="list-group">
          <% @cashiers.each do |cashier| %>
            <li class="list-group-item">
              <h4 class="list-group-item-heading"> <%= cashier.name%></h4>
              <%= cashier.store.name%></br>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <a href="/cashiers/new" class="btn btn-info btn-lg btn-block">Add New Cashier</a>
  </div>
</div>

