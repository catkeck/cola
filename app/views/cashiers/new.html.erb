<div class="col-lg-12">
  <div class="well bs-component">
    <%= form_for(@cashier, url: cashiers_path, class: "form-horizontal") do |f| %>
      <fieldset>
        <legend> New Cashier </legend>
          <div class="form-group">
            <label for="cashier_name" class="col-lg-2 control-label">Name:</label>
            <div class="col-lg-10">
              <%= f.text_field :name, {class: "form-control"} %></br>
            </div>
          </div>
          <div class="form-group">
            <label for="cashier_username" class="col-lg-2 control-label">Username:</label>
            <div class="col-lg-10">
              <%= f.text_field :username, {class: "form-control"} %></br>
            </div>
          </div>
          <div class="form-group">
            <label for="cashier_password" class="col-lg-2 control-label">Password:</label>
            <div class="col-lg-10">
              <%= f.password_field :password, {class: "form-control"} %></br>
            </div>
          </div>
          <div class="form-group">
            <label for="cashier_password_confirmation" class="col-lg-2 control-label">Password Confirmation:</label>
            <div class="col-lg-10">
              <%= f.password_field :password_confirmation, {class: "form-control"} %></br>
            </div>
          </div>
          <div class="form-group">
            <label for="cashier_store_id" class="col-lg-2 control-label">Store:</label>
            <div class="col-lg-10">
              <%= f.select :store_id, current_user.stores.collect { |store| [store.name, store.id]}, {}, {class: "form-control"}%></br>
            </div>
          </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Create New Cashier", {class: "btn btn-primary btn-block"} %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>

     
           

       