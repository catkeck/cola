<div class="col-lg-12">
  <div class="well bs-component">
    <div class="jumbotron">
      <h1><%= @customer.name%></h1>
      <h2><%= @customer.username%></h2>
    </div>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Past Visits</h3>
      </div>
    <div class="panel-body">
      <% @customer.visits.each do |visit|%>
        <%= visit.store.name%>:</br>  
        <%= visit.start_time.to_date%> </br>
        <% if !visit.end_time.nil? %>
          <%= (visit.end_time - visit.start_time).to_i/60%> minutes 
        <% else %>
          Unknown wait time
        <%end%>
        </br>
        </br>  
      <%end%>
    </div>
  </div>
</div>

