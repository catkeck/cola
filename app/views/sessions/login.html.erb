<div class="col-lg-12">
  <div class="well bs-component">
    <%= form_for :user, class: "form-horizontal" do |f| %></br>
      <fieldset>
      <legend> Log In </legend>
        <div class="form-group">
           <label for="user_username" class="col-lg-2 control-label">Username:</label>
           <div class="col-lg-10">
            <%= f.text_field :username, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
          <label for="user_password" class="col-lg-2 control-label">Password:</label>
          <div class="col-lg-10">
            <%= f.password_field :password, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Log In", {class: "btn btn-primary btn-block"} %>
          </div>
        </div>
      </fieldset>
    <% end %>
    <center>
      <% if @access != "cashier" %>
        Don't have an account? <%= link_to "Join Cola!", "/#{@access}s/signup"%>
      <%end%>
    </center>
  </div>
</div>
    