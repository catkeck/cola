<div class="col-lg-12">
  <div class="well bs-component">
    <%= form_for @store, {class: "form-horizontal"} do |f| %>
      <fieldset>
        <legend>New Store</legend>
        <div class="form-group">
          <label for="store_name" class="col-lg-2 control-label">Name:</label>
          <div class="col-lg-10">
            <%= f.text_field :name, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
          <label for="store_address" class="col-lg-2 control-label">Address:</label>
          <div class="col-lg-10">
            <%= f.text_area :address, {class: "form-control"} %></br>
          </div>
        </div>  
        <div class="form-group">
          <label for="store_name" class="col-lg-2 control-label">Image:</label>
          <div class="col-lg-10">
            <%= f.text_field :image, {class: "form-control"} %></br>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= f.submit "Create New Store", {class: "btn btn-primary"} %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>




