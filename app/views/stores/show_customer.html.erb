<div class="col-lg-12">
  <div class="well bs-component">
    <div class="jumbotron">
      <div class="row">
        <div class="col-xs-6">
          <h1><%= @store.name%></h1>
        </div>
        <div class="col-xs-6" style="text-align:right">
          <% if !@store.image.nil? %>
            <img src=<%=@store.image%> width="200px">
          <% end %>
        </div>
      </div>
    </div>
    <iframe
      width="100%"
      height="300"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyB61PMfdO7UvfSWMJoQsEMVHgKvEX3-7mc
        &q=<%=@store.altered_address%>" allowfullscreen>
   </iframe></br>
    <%=link_to "Get in Line", new_store_visit_path(@store.id), class: "btn btn-info btn-block" %>
  </div>
</div>

