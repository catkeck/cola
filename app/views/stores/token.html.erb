<div class="col-lg-12">
  <div class="well bs-component">
    <div class="jumbotron">
      <div class="row">
        <div class="col-xs-6">
          <h3>Welcome to </h3>
          <h1><%= @store.name%></h1>
        </div>
        <div class="col-xs-6" style="text-align: right">
          <% if !@store.image.nil? %>
            <img src=<%=@store.image%> width="200px">
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6" style="height: 100px">
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <h3>Please enter the following token to add your self to the line:</h3>
          <h1> <%= @token.code %></h1>
        </div>
      </div>
    </div>
    

  </div>
</div>

